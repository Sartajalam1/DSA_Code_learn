 // Pointer || days class
#include<iostream>
using namespace std;

void solve(int arr[]) {
        cout <<"Size inside solve function " << sizeof(arr) << endl;
        cout <<"arr: " << arr << endl;
        cout << "&arr: " << & arr << endl;

        arr[0] = 50;
}

void update(int *p) {
        cout << "Address stored inside p is: " << p << endl;
        cout << "Address of p  is:" << &p << endl;
        *p = *p + 10;
}

