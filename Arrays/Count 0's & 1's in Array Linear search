//Count ) 0's and 1's in Array
 #include<iostream>
using namespace std;

int main(){
int arr[] = {0,0,1,0,1,1,1,0,0,1,0,1};
  int size = 12;
  int zero = 0;
  int one = 0;

  for(int i = 0; i<size; i++){
    // if Zero Found , Increment Zero
   if(arr[i] == 0)
    zero++;
     // If one Found , Increment One
    else if(arr[i] == 1)
     one++;
     
  }
  cout<<"Count Numbers Of Zero " <<zero<<endl;
  cout<<"Count Numbers Of One "<<one<<endl;
}
