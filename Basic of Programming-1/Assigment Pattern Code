 Q.1 //Numeric Hollow Half Pyaramid
#include<iostream>
using namespace std;

int main(){
  int n;
  cin>>n;
  for(int row = 0; row<n; row++){
    for(int col = 0; col<=row; col++){
     // start and last col & row Print logic
      if(col == 0 || col==row || row == n-1){
        cout<<col+1;
      }
        // inner Space print
      else{
        cout<<" ";
      }
    }
    cout<<endl;
  }
}
