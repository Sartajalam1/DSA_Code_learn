//Find the Maximun Three number
#include<iostream>
using namespace std;

int findMaximum(int num1, int num2, int num3){
  if(num1>num2 && num1>num3){
    return num1;
  }
  else if(num2>num1 && num2>num3){
    return num2;
  }
  else{
    return num3;
  }
}
int main(){
  int num1,num2,num3;
  cout<<"Enter the Three Number "<<endl;
  cin>>num1>>num2>>num3;
//Function invoke/ Declare
  int avg = findMaximum(num1,num2,num3);
  cout<<"Maximum  number "<<avg<<endl;
}
